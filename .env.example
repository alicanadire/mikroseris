# ToyStore Frontend Environment Configuration

# API Gateway (Main Backend Entry Point)
VITE_API_GATEWAY_URL=http://localhost:5000/api

# IdentityServer4 Authentication
VITE_IDENTITY_SERVER_URL=http://localhost:5004
VITE_CLIENT_ID=toystore-spa

# Individual Service URLs (for direct access in development)
VITE_PRODUCT_SERVICE_URL=http://localhost:5001/api
VITE_ORDER_SERVICE_URL=http://localhost:5002/api
VITE_USER_SERVICE_URL=http://localhost:5003/api
VITE_INVENTORY_SERVICE_URL=http://localhost:5005/api
VITE_NOTIFICATION_SERVICE_URL=http://localhost:5006/api

# Feature Flags
VITE_ENABLE_OAUTH_FLOW=false
VITE_ENABLE_CACHE=true
VITE_ENABLE_ANALYTICS=false

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
