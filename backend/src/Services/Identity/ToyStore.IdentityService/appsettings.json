{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=ToyStoreIdentityDb;User Id=sa;Password=ToyStore123!;TrustServerCertificate=true;",
    "Redis": "localhost:6379",
    "RabbitMQ": "amqp://guest:guest@localhost:5672/"
  },
  "IdentityServer": {
    "Clients": {
      "ToyStoreSPA": {
        "RedirectUris": [
          "http://localhost:3000/auth/callback",
          "http://localhost:5173/auth/callback"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:3000",
          "http://localhost:5173"
        ],
        "AllowedCorsOrigins": ["http://localhost:3000", "http://localhost:5173"]
      }
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/identity-service-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
